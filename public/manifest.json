{
  "manifest_version": 3,
  "name": "ZOOPS-TENSION",
  "version": "1.0.0",
  "description": "ZOOPZOOP 웹 서비스에서 제공하는 웹페이지 스크랩 크롬 확장 프로그램",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "background",
    "identity",
    "sidePanel"
  ],
  "host_permissions": ["https://api.pagescrap.com/*", "https://auth.pagescrap.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "action": {
    "default_title": "Zoops Extension"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png"
  }
}
